<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_tax_epayment_wizard_form" model="ir.ui.view">
            <field name="name">tax.epayment.wizard.form</field>
            <field name="model">tax.epayment.wizard</field>
            <field name="arch" type="xml">
                <form string="Tax Computation Wizard">
                    <group>
                      <group>
                          <field name="company_id"  options="{'no_create': True, 'no_create_edit':True}" />
                          
                      </group>
                      <group>
                          <field name="date" />                        
                      </group>
                        
                    </group>
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_tax_epayment_wizard_action" model="ir.actions.act_window">
            <field name="name">Tax Epayment Report</field>
            <field name="res_model">tax.epayment.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_tax_epayment_wizard_form"/>
        </record> 
    
    
       <menuitem
        id="tax_epayment_wizard_menuitem"
        name="Tax Epayment Report"
        parent="hr_payroll.menu_hr_payroll_report"
        sequence="11"
        action="de_payroll_tax_reports.open_tax_epayment_wizard_action"
    />


</odoo>