<odoo>
    <data>
        
   <template id="prescrip_template">     
    <t t-call="web.html_container">
    <t t-call="web.external_layout">
        <div class="page" >        
            <div class="oe_structure"/>
            <br/>
             <div class='row'>
                 <h2> <span t-esc='docs.name' /> </h2>
             </div>  
              <div class='row'>
                  <table class="table table-sm table-striped table-bordered">
                      <tr>
                          <th>Employee</th>
                          <td><span t-esc='docs.employee_id.name' /></td>
                          <th>Amount</th>
                          <td><span t-esc='docs.amount' /></td>
                      </tr>
                 </table>                  
             </div>  
            </div>
             
             <div class='row'>
                 
                    <table class="table table-sm table-striped table-bordered"  width="400">
                        <thead>
                            <th>Product</th>
                            <th>Description</th>
                            <th>Amount</th>
                        </thead>
                        <tbody>
                           <t t-set='total_amount'   t-value='0'/> 
                           <t t-foreach="docs.prescrip_line"  t-as="line"> 
                             <tr>
                                 <td>
                                    <t t-foreach="line.product_id"  t-as="prd"> 
                                       <span t-esc='prd.name' /> , 
                                    </t>    
                                 </td>
                                 <td>
                                    <span t-esc='line.name' /> 
                                 </td>
                                 <td>
                                   <span t-esc='line.amount' />
                                   <t t-set='total_amount'   t-value='total_amount + line.amount'/>  
                                 </td>
                             </tr>
                           </t>                             
                        </tbody>                                              
                     </table>    
                  </div>
                 <br/>
                 <div class='row'>
                     <table class="table table-sm table-striped table-bordered"  width="400">
                          <tr>
                              <th></th>
                              <td></td>
                              <th>Total Amount</th>
                              <td class='pull-right'><span t-esc='total_amount' /></td>
                          </tr>
                     </table> 
                 </div>          
         
    </t>
    </t>
</template>
        
      
