<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data >
<!--         hr_expense_sheet_form_view_inherit -->
		<record id="hr_expense_sheet_form_view_inherit" model="ir.ui.view">
			<field name="name">hr.expense.sheet.form.view.inherit</field>
			<field name="model">hr.expense.sheet</field>
			<field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='exception']" position="after">
					<field name="approve_date" invisible="1"/>
                    <field name="post_date" invisible="1"/>
                    <field name="payment_date" invisible="1" />
                    <field name="doc_received" invisible="1" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>